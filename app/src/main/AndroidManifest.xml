<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.babbangona.shpincentiveapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.babbangona.shpincentiveapp.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.babbangona.shpincentiveapp.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <service
            android:name=".BackgroundSync"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <provider
            android:name=".NotesContentProvider"
            android:authorities="com.babbangona.shpincentiveapp"
            android:exported="true"
            android:readPermission="com.babbangona.shpincentiveapp.READ_DATABASE"
            android:writePermission="com.babbangona.shpincentiveapp.WRITE_DATABASE" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"

            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main2Activity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true"/>
        <activity android:name=".VisualizationPage" />
        <activity android:name=".ActivityDashboard" />
        <activity android:name=".QRCodeGenerator" />
        <activity android:name=".FullDashboard"></activity>



        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>